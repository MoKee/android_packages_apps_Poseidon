<?xml version="1.0" encoding="utf-8"?>
<com.mx.browser.navigation.MxQuickItemView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/qd_item_view_id"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginLeft="0dip"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true" >

   <RelativeLayout
        android:id="@+id/qd_icon_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp"
        android:layout_marginRight="5dip"
        android:layout_marginTop="5dip"
        android:layout_centerHorizontal="true"
        android:paddingTop="0dip" >
      <ImageView
            android:id="@+id/qd_item_icon"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="fitXY"
            android:background="@android:color/transparent"
            android:padding="5dp"
            android:layout_centerHorizontal = "true"/>

        <ImageView
            android:id="@+id/qd_item_delete"
            android:layout_width="@dimen/qd_item_delete_icon_width"
            android:layout_height="@dimen/qd_item_delete_icon_width"
            android:layout_marginLeft="0dip"
            android:scaleType="fitXY"
            android:layout_gravity="top|left"
            android:layout_marginRight="3dip"
            android:src="@drawable/qd_item_delete"
            android:visibility="gone" />

      
        <ImageView
            android:id="@+id/qd_item_folder_bg"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:visibility="gone" />
    </RelativeLayout>

    <TextView
        android:id="@+id/qd_item_title"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:layout_marginLeft="3dip"
        android:layout_marginRight="3dip"
        android:textSize="@dimen/qd_textsize"
        android:textColor="@color/qd_item_title_color"
        android:singleLine="true"
        android:gravity="center"/>


</com.mx.browser.navigation.MxQuickItemView>